<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventDetailCV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    >
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/eventDestinationTv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:padding="5dp"
            android:fontFamily="@font/roboto_bold"
            android:drawableLeft="@drawable/ic_directions_car_black_24dp"
            android:drawablePadding="5dp"
            />
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:layout_weight="1"
                android:id="@+id/eventStartTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:fontFamily="@font/roboto_regular"
                android:drawableLeft="@drawable/ic_date_24dp"
                android:drawablePadding="10dp"
                android:textColor="@color/primary_dark" />
            <TextView
                android:layout_weight="1"
                android:layout_marginBottom="2dp"
                android:id="@+id/eventEndTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_date_24dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="17sp"
                android:textColor="@color/primary_dark" />

        </LinearLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/estimateBudgetTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_attach_money_black_24dp"
            android:fontFamily="@font/roboto_regular"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</android.support.v7.widget.CardView>